title: '{{title}}'
conformance: Minimal
paper_size: 
  width: 210
  height: 297
decorator:
  type: SimplePageDecorator
  margins:
    top: 10
    right: 10
    bottom: 10
    left: 10
body:
  elements:
    - type: LinearLayout
      elements:
        - type: Text
          alignment: Center
          contents:
            - value: '{{orgInfo.name | replace(from="'", to="")}}'
              style:
                font_size: 17
                bold: true
        {% if branchInfo.address.address %}
        - type: Text
          alignment: Center
          contents:
            - value: '{{branchInfo.address.address | replace(from="'", to="")}}'
              style:
                font_size: 12
        {% endif %}
        {% if branchInfo.address.city %}
        - type: Text
          alignment: Center
          contents:
            - value: '{{branchInfo.address.city | replace(from="'", to="")}} - {{branchInfo.address.pincode | default(value = '1')}}'
              style:
                font_size: 12
        {% endif %}
        - type: Text
          alignment: Center
          contents:
            - value: {{title}}
              style:
                font_size: 13
                bold: true
        - type: Text
          alignment: Center
          contents:
            - value: '{{fromDate | date(format="%d-%m-%Y")}} to {{toDate | date(format="%d-%m-%Y")}}'
              style:
                font_size: 11
                bold: true
        - type: PaddedElement
          padding:
           vertical: 1
           horizontal: 0
          element:
            type: BlankLine
        - type: TableLayout
          widths: [18,2,80]
          padding: 1
          text_style:
            font_size: 11
            bold: true
          rows:
            - columns:
              - type: Text
                contents:
                  - value: 'Branch'
              - type: Text
                contents:
                  - value: ':'
              - type: Text
                contents:
                  - value: '{{branch | replace(from="'", to="")}}'
        - type: PaddedElement
          padding:
           vertical: 1
           horizontal: 0
          element:
            type: BlankLine
        - type: TableLayout
          widths: [8,30,14,10,14,14,10]
          padding:
           vertical: 1
           horizontal: 1
          text_style:
            font_size: 11
            bold: true
          rows:
            - columns:
              - type: Text
                contents:
                  - value: 'SI.No'
              - type: Text
                padding:
                  left: 1
                contents:
                  - value: 'Inventory'
              - type: Text
                padding:
                  right: 1
                alignment: Right
                contents:
                  - value: 'Asset Value'
              - type: Text
                padding:
                  right: 1
                alignment: Right
                contents:
                  - value: 'Sold'
              - type: Text
                padding:
                  right: 1
                alignment: Right
                contents:
                  - value: 'Sale Value'
              - type: Text
                padding:
                  right: 1
                alignment: Right
                contents:
                  - value: 'Profit Value'
              - type: Text
                alignment: Right
                contents:
                  - value: 'Profit (%)'
        - type: PaddedElement
          padding:
           vertical: 1
           horizontal: 0
          element:
            type: BlankLine
        - type: TableLayout
          widths: [8,30,14,10,14,14,10]
          text_style:
            font_size: 11
          padding:
            horizontal: 0
            vertical: 1
          cell_decorator:
            type: SimpleCellDecorator
            inner: true
            outer: true
          rows:
            {% for record in records %}
            - columns:
              - type: Text
                padding: 1
                contents:
                  - value: '{{loop.index}}'
              - type: Text
                padding: 1
                contents:
                  - value: '{{record.inventory | replace(from="'", to="")}}'
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: '{{record.assetValue | fixed}}'
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: '{{record.sold}}'
                    style: 
                      shrink: true
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: '{{record.saleValue | fixed}}'
                    style: 
                      shrink: true
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: '{{record.profitValue | fixed}}'
                    style: 
                      shrink: true
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: '{{record.profitPercent | fixed}}'
                  {% if record.profitPercent >= 0 %}
                    style: 
                      color:
                        rgb: [0,100,0]
                  {% else %}
                    style: 
                      color:
                        rgb: [191,0,0]
                  {% endif %}
                      shrink: true
            {% endfor %}
        - type: PaddedElement
          padding:
           vertical: 1
           horizontal: 0
          element:
            type: BlankLine   
        - type: TableLayout
          widths: [14,3,45,15,3,20] 
          padding:
           vertical: 1
           horizontal: 0
          text_style:
            font_size: 11
            bold: true
          rows:
            - columns:
              - type: Text
                padding: 1
                contents:
                  - value: 'Sale Value'
              - type: Text
                padding: 1
                contents:
                  - value: ':'
              - type: Text
                padding: 1
                contents:
                  - value: 'Rs. {{summary.saleValue | fixed}}'
              - type: Text
                padding: 1
                contents:
                  - value: 'Asset Value'
              - type: Text
                padding: 1
                contents:
                  - value: ':'
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: 'Rs. {{summary.assetValue | fixed}}'
            - columns:
              - type: Text
                padding: 1
                contents:
                  - value: 'Profit Value'
              - type: Text
                padding: 1
                contents:
                  - value: ':'
              - type: Text
                padding: 1
                contents:
                  - value: 'Rs. {{summary.profitValue | fixed}}'
              - type: Text
                padding: 1
                contents:
                  - value: 'Profit Percent'
              - type: Text
                padding: 1
                contents:
                  - value: ':'
              - type: Text
                alignment: Right
                padding: 1
                contents:
                  - value: '{{summary.profitPercent | fixed}}'
                  {% if summary.profitPercent >= 0 %}
                    style:
                      color:
                        rgb: [0,100,0]
                  {% else %}
                    style:
                      color:
                        rgb: [191,0,0]
                  {% endif %}
            - columns:
              - type: Text
                padding: 1
                contents:
                  - value: 'Sold'
              - type: Text
                padding: 1
                contents:
                  - value: ':'
              - type: Text
                padding: 1
                contents:
                  - value: '{{summary.sold}}'
        - type: PaddedElement
          padding:
           vertical: 1
           horizontal: 0
          element:
            type: BlankLine